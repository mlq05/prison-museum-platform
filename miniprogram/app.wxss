/**app.wxss - 全局样式 - 监狱历史文化展览馆小程序**/

/* 全局变量 - 配色方案（庄重文化风+科技简约感）*/
page {
  /* 主色调 */
  --primary-color: #1A365D; /* 庄重藏青 */
  --secondary-color: #F5F1E6; /* 文化米白 */
  --accent-color: #409EFF; /* 科技蓝 */
  --text-primary: #1A365D;
  --text-secondary: #666666;
  --text-light: #999999;
  --border-color: #E5E5E5;
  --bg-color: #F5F1E6;
  --white: #FFFFFF;
  --error-color: #F56C6C;
  --success-color: #67C23A;
  --warning-color: #E6A23C;
  
  /* 字体 */
  --font-family-base: 'PingFang SC', 'Helvetica Neue', 'Microsoft YaHei', sans-serif;
  --font-family-title: 'STKaiti', 'KaiTi', serif;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  
  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(26, 54, 93, 0.08);
  --shadow-md: 0 4rpx 16rpx rgba(26, 54, 93, 0.12);
  --shadow-lg: 0 8rpx 24rpx rgba(26, 54, 93, 0.16);
  
  font-family: var(--font-family-base);
  color: var(--text-primary);
  background-color: var(--bg-color);
  font-size: 28rpx;
  line-height: 1.6;
  height: 100%;
}

/* 全局容器 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 页面安全区域适配 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 通用布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 通用文字样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

.text-white {
  color: var(--white);
}

.text-center {
  text-align: center;
}

.text-bold {
  font-weight: bold;
}

/* 标题样式 */
.title-large {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  font-family: var(--font-family-title);
}

.title-medium {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.title-small {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  text-align: center;
  border: none;
  transition: all 0.3s;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, #2C5282 100%);
  color: var(--white);
  box-shadow: var(--shadow-sm);
}

/* Skyline 不支持 :active 伪类，改用 class */
.btn-primary.btn-active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: var(--white);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-disabled {
  background-color: #CCCCCC;
  color: #999999;
  /* Skyline 不支持 cursor 属性，移除 */
}

/* 卡片样式 */
.card {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

/* 输入框样式 */
.input {
  padding: 24rpx;
  background-color: var(--white);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: 28rpx;
}

/* Skyline 不支持 :focus 伪类，改用 class */
.input.input-focus {
  border-color: var(--accent-color);
}

.input-error {
  border-color: var(--error-color);
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

.loading-text {
  margin-top: var(--spacing-md);
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) 0;
  color: var(--text-light);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: var(--spacing-md);
}

.empty-text {
  font-size: 28rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: var(--border-color);
  margin: var(--spacing-md) 0;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: var(--secondary-color);
  color: var(--primary-color);
  border-radius: var(--radius-sm);
  font-size: 24rpx;
}

.tag-primary {
  background-color: var(--primary-color);
  color: var(--white);
}

.tag-success {
  background-color: var(--success-color);
  color: var(--white);
}

.tag-warning {
  background-color: var(--warning-color);
  color: var(--white);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.slide-up {
  animation: slideUp 0.4s ease-out;
}

.scale-in {
  animation: scaleIn 0.3s ease-out;
}

/* 印章动画（预约成功用） */
@keyframes sealStamp {
  0% {
    transform: scale(0.5) rotate(-10deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.1) rotate(5deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.seal-stamp {
  animation: sealStamp 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}
