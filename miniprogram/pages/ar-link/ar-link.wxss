/* ar-link.wxss */
.ar-link-page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 方案切换容器 */
.switch-container {
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  margin-top: -2rpx; /* 消除可能的空白间隙 */
}

.switch-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.switch-buttons {
  display: flex;
  gap: 12rpx;
}

.switch-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 26rpx;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.switch-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 滚动容器 */
.scroll-container {
  flex: 1;
  height: 0; /* 关键：让scroll-view可以正确计算高度 */
  overflow-y: auto;
}

.content {
  padding: 40rpx 30rpx;
  padding-bottom: 40rpx;
  min-height: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 20rpx;
}

.description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

/* 二维码容器 */
.qr-code-container {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.qr-canvas,
.qr-code {
  width: 400rpx;
  height: 400rpx;
  border: 4rpx solid #f0f0f0;
  border-radius: 12rpx;
}

.qr-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 链接容器 */
.link-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.link-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.link-text {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.copy-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.copy-btn::after {
  border: none;
}

/* 提示信息 */
.tips {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
  padding-left: 20rpx;
}

/* Marker提示 */
.marker-tip {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.marker-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.marker-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.marker-btn {
  width: 100%;
  background: #409EFF;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
}

.marker-btn::after {
  border: none;
}

