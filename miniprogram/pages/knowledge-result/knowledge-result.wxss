.knowledge-result-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e9ecef 100%);
}

.scroll-content {
  width: 100%;
}

.scroll-wrapper {
  padding: 30rpx;
  padding-bottom: 40rpx;
}

/* 结果卡片 */
.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

/* 结果图标 */
.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-icon.passed {
  background: linear-gradient(135deg, #67C23A 0%, #85ce61 100%);
  box-shadow: 0 8rpx 20rpx rgba(103, 194, 58, 0.3);
}

.result-icon.failed {
  background: linear-gradient(135deg, #F56C6C 0%, #f78989 100%);
  box-shadow: 0 8rpx 20rpx rgba(245, 108, 108, 0.3);
}

.icon-text {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}

/* 分数区域 */
.score-section {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 30rpx;
}

.score-number {
  font-size: 80rpx;
  font-weight: 700;
  color: #303133;
  line-height: 1;
}

.score-unit {
  font-size: 36rpx;
  color: #909399;
  margin-left: 10rpx;
}

/* 结果状态 */
.result-status {
  margin-top: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
  list-style: none;
  padding-left: 0;
}

.status-text.passed-text {
  color: #67C23A;
}

.status-text.failed-text {
  color: #F56C6C;
}

.status-desc {
  font-size: 28rpx;
  color: #909399;
  line-height: 1.5;
  list-style: none;
  padding-left: 0;
}

/* 统计信息 */
.stats-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 30rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #409EFF;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #909399;
}

/* 操作按钮 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #409EFF 0%, #67C23A 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.3);
}

.btn-primary:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: linear-gradient(135deg, #E6A23C 0%, #f0c674 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(230, 162, 60, 0.3);
}

.btn-secondary:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.btn-outline {
  background: #fff;
  color: #606266;
  border: 2rpx solid #dcdfe6;
}

.btn-outline:active {
  background: #f5f7fa;
}

/* 底部安全区域 */
.scroll-bottom-safe {
  height: 40rpx;
}

