.admin-booking-page {
  min-height: 100vh;
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.admin-booking-scroll {
  flex: 1;
  box-sizing: border-box;
  padding: 24rpx 24rpx 120rpx;
  width: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 32rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 20rpx;
}

.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #111827;
}

.picker-value {
  font-size: 28rpx;
  color: #111827;
}

.slot-list {
  margin-top: 8rpx;
}

.slot-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  box-sizing: border-box;
  overflow: hidden;
}

.slot-item:last-child {
  border-bottom-width: 0;
}

.slot-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.slot-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #111827;
}

.slot-time {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.slot-body {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  box-sizing: border-box;
}

.slot-input {
  flex: 1;
  min-width: 0;
  box-sizing: border-box;
}

.sub-label {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 6rpx;
}

.number-input {
  width: 100%;
  padding: 16rpx 16rpx;
  min-height: 64rpx;
  line-height: 32rpx;
  height: 64rpx;
  border-radius: 12rpx;
  background-color: #f9fafb;
  font-size: 28rpx;
  box-sizing: border-box;
  vertical-align: middle;
}

.primary-btn {
  margin-top: 24rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  border-radius: 999rpx;
}

.secondary-btn {
  margin-top: 16rpx;
  padding: 18rpx 0;
  font-size: 30rpx;
  border-radius: 999rpx;
}

.filter-row {
  margin-top: 8rpx;
  margin-bottom: 16rpx;
}

.booking-list {
  margin-top: 8rpx;
}

.booking-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.booking-item.leader-visit-item {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 20%, #ffffff 20%);
  padding: 20rpx 16rpx;
  margin: 0 -16rpx 0 -16rpx;
  border-left: 4rpx solid #d97706;
  border-radius: 8rpx;
}

.booking-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
  gap: 8rpx;
}

.name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
}

.leader-badge {
  font-size: 22rpx;
  color: #d97706;
  background-color: rgba(217, 119, 6, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  display: inline-block;
  line-height: 1.4;
}

.status {
  font-size: 24rpx;
}

.booking-line {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #4b5563;
  margin-top: 4rpx;
}

.booking-line.small {
  font-size: 22rpx;
  color: #6b7280;
}

.remark-label {
  color: #6b7280;
  margin-right: 8rpx;
}

.remark-text {
  flex: 1;
  color: #374151;
  word-break: break-all;
  line-height: 1.5;
}

.booking-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.approve-btn,
.reject-btn {
  min-width: 140rpx;
  padding: 14rpx 0;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.approve-btn {
  background-color: #22c55e;
  color: #ffffff;
}

.reject-btn {
  background-color: #fee2e2;
  color: #b91c1c;
}

.empty-text {
  text-align: center;
  font-size: 26rpx;
  color: #9ca3af;
  padding: 40rpx 0;
}

.load-more {
  text-align: center;
  font-size: 24rpx;
  color: #9ca3af;
  padding: 24rpx 0;
}

.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal {
  width: 80%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 16rpx;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.modal-textarea {
  min-height: 160rpx;
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.modal-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}
