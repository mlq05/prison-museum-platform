/**booking-calendar.wxss - 预约日历页面样式**/

.booking-calendar-page {
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.scroll-content {
  flex: 1;
  height: 0;
  padding-bottom: 120rpx;
}

/* 日期选择区域 */
.date-section {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
}

.section-title {
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.date-scroll {
  width: 100%;
  white-space: nowrap;
  height: 200rpx;
  overflow-x: auto;
  overflow-y: hidden;
}

.date-list {
  display: inline-flex;
  flex-direction: row;
  gap: var(--spacing-md);
  padding: var(--spacing-sm) var(--spacing-md);
  min-height: 160rpx;
  height: 100%;
  align-items: center;
}

.date-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: var(--spacing-lg);
  min-height: 160rpx;
}

.date-loading .loading-text {
  font-size: 28rpx;
  color: var(--text-light);
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 160rpx;
  min-width: 120rpx;
  max-width: 120rpx;
  background-color: var(--white);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm);
  position: relative;
  transition: all 0.3s;
  flex-shrink: 0;
  box-sizing: border-box;
}

.date-item.selected {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  color: var(--white);
}

.date-day {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--text-primary);
  line-height: 1.2;
  margin-bottom: var(--spacing-xs);
  min-height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-item.selected .date-day {
  color: var(--white);
}

.date-weekday {
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: var(--spacing-xs);
}

.date-item.selected .date-weekday {
  color: rgba(255, 255, 255, 0.8);
}


.date-status {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

.status-dot {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  background-color: var(--error-color);
  color: var(--white);
  border-radius: var(--radius-sm);
}

.status-dot.available {
  background-color: var(--success-color);
}

/* 时段选择区域 */
.timeslot-section {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
}

.selected-date {
  text-align: center;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-sm);
  background-color: var(--secondary-color);
  border-radius: var(--radius-md);
}

.timeslot-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.timeslot-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md);
  background-color: var(--secondary-color);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  position: relative;
  transition: all 0.3s;
}

.timeslot-item.selected {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  color: var(--white);
}

.timeslot-item.disabled {
  opacity: 0.5;
  background-color: var(--border-color);
}

.timeslot-item.warning {
  border-color: var(--warning-color);
  background-color: rgba(230, 162, 60, 0.1);
}

.timeslot-time {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  min-width: 200rpx;
}

.timeslot-item.selected .timeslot-time {
  color: var(--white);
}

.timeslot-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  flex: 1;
  margin-left: var(--spacing-md);
}

.timeslot-item.selected .timeslot-label {
  color: rgba(255, 255, 255, 0.8);
}

.timeslot-available {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.timeslot-item.selected .timeslot-available {
  color: rgba(255, 255, 255, 0.8);
}

.full-text {
  color: var(--error-color);
}

.warning-icon {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 32rpx;
}

/* 空状态 */
.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  margin-top: var(--spacing-xl);
}

.tip-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-md);
  background-color: var(--white);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bottom-actions .btn {
  width: 100%;
}

.bottom-actions button[disabled] {
  background-color: #CCCCCC !important;
  color: #999999 !important;
  opacity: 1;
}

.bottom-actions .btn.disabled {
  background-color: #CCCCCC !important;
  color: #999999 !important;
  opacity: 1;
}

