/**index.wxss - 首页样式**/

.index-page {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 可滚动内容区域 */
.scroll-content {
  flex: 1;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow-y: auto;
}

.scroll-wrapper {
  width: 100%;
  min-height: 100%;
}

/* 展馆轮播图 */
.hall-banner-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
}

.hall-banner-swiper {
  width: 100%;
  height: 360rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.hall-banner-image {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
}

.hall-banner-image-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.hall-banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
  z-index: 2;
}

.hall-banner-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.hall-banner-subtitle {
  font-size: 24rpx;
  opacity: 0.95;
  line-height: 1.5;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 400rpx;
  margin-bottom: var(--spacing-md);
}

.banner-image {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
}

.banner-image-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-lg);
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  color: var(--white);
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  font-family: var(--font-family-title);
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 公告滚动 */
.announcements-scroll {
  margin: var(--spacing-md);
  padding: var(--spacing-md);
  background-color: var(--white);
  border-radius: var(--radius-md);
}

.announcements-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.announcements-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-xs);
}

.announcements-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.announcements-content {
  white-space: nowrap;
  height: 60rpx;
}

.announcement-item {
  display: inline-flex;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-md);
  margin-right: var(--spacing-md);
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--radius-sm);
  font-size: 26rpx;
}

.announcement-text {
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announcement-arrow {
  margin-left: var(--spacing-xs);
  font-size: 24rpx;
}

/* 快速入口 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: var(--spacing-lg) var(--spacing-md);
  background-color: var(--white);
  margin-bottom: var(--spacing-md);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.action-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-sm);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
}

.action-title {
  font-size: 24rpx;
  color: var(--text-primary);
}

/* 展馆介绍 */
.exhibition-intro {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, var(--white) 0%, var(--secondary-color) 100%);
}

.intro-title {
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.intro-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.intro-features {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.feature-item {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 45%;
}

.feature-icon {
  color: var(--accent-color);
  font-size: 32rpx;
  margin-right: var(--spacing-sm);
  font-weight: bold;
}

.feature-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

/* 统计数据 */
.statistics {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: var(--spacing-lg);
  margin: var(--spacing-md);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: var(--border-color);
}

/* 区块标题 */
.section {
  margin: var(--spacing-lg) 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 var(--spacing-md) var(--spacing-md);
}

.section-title {
  position: relative;
  padding-left: var(--spacing-md);
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

.section-more {
  font-size: 26rpx;
  color: var(--text-light);
}

/* 热门展区 */
.hall-banner-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
}

.hall-banner-swiper {
  width: 100%;
  height: 360rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.hall-banner-image {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
}

.hall-banner-image-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.hall-banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
  z-index: 2;
}

.hall-banner-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.hall-banner-subtitle {
  font-size: 24rpx;
  opacity: 0.95;
  line-height: 1.5;
}

.hot-halls-list {
  margin-top: var(--spacing-md);
}

.hall-scroll {
  white-space: nowrap;
  width: 100%;
}

.hall-list {
  display: inline-flex;
  padding: 0 var(--spacing-md);
  gap: var(--spacing-md);
}

.hall-card {
  width: 320rpx;
  background-color: var(--white);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  display: inline-block;
  vertical-align: top;
}

.hall-cover {
  width: 100%;
  height: 240rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
  overflow: hidden;
}

.hall-cover-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.hall-cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
}

.hall-cover-icon {
  font-size: 80rpx;
  opacity: 0.3;
}

.hall-cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: var(--spacing-sm);
  background: linear-gradient(to top, rgba(0, 0, 0, 0.3) 0%, transparent 100%);
}

.hall-visit-count {
  display: flex;
  align-items: center;
  gap: 4rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.hall-visit-icon {
  font-size: 20rpx;
  color: var(--white);
}

.hall-visit-text {
  font-size: 20rpx;
  color: var(--white);
}

.hall-info {
  padding: var(--spacing-md);
}

.hall-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.hall-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: var(--spacing-sm);
  overflow: hidden;
  text-overflow: ellipsis;
  /* Skyline 渲染模式不支持 -webkit-line-clamp，使用 max-height 代替 */
  max-height: calc(1.5em * 2); /* 2行高度 */
  display: block; /* 改为 block，避免 -webkit-box 兼容性问题 */
}

.hall-tags {
  display: flex;
  gap: var(--spacing-xs);
}

.hall-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  color: var(--white);
  border-radius: var(--radius-sm);
  display: inline-block;
}

.hall-tag-ar {
  background-color: var(--accent-color);
}

.hall-tag-hot {
  background-color: #FF6B6B;
  margin-left: var(--spacing-xs);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) var(--spacing-md);
  min-height: 200rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 反馈列表 */
.feedback-list {
  padding: 0 var(--spacing-md);
}

.feedback-card {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.feedback-user {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.feedback-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--warning-color);
}

.rating-star {
  display: inline-block;
  margin: 0;
  padding: 0;
  line-height: 1;
  font-size: 28rpx;
  color: var(--warning-color);
  width: auto;
  height: auto;
  border: none;
  background: none;
}

.feedback-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.feedback-images {
  display: flex;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
}

.feedback-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-md);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: var(--spacing-md);
  font-size: 26rpx;
  color: var(--text-light);
}
