.exhibition-halls-page {
  min-height: 100vh;
  background-color: var(--bg-color, #f5f5f5);
}

.scroll-content {
  width: 100%;
}

.scroll-wrapper {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* Â±ïÈ¶Ü‰ªãÁªç */
.intro-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.intro-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.intro-desc {
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.95;
}

/* Â±ïÂå∫ÂàóË°® */
.halls-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hall-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.hall-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.hall-image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hall-image-wrapper::before {
  content: 'üèõÔ∏è';
  position: absolute;
  font-size: 80rpx;
  opacity: 0.3;
  z-index: 1;
}

.hall-image {
  width: 100%;
  height: 100%;
  background-color: transparent;
  position: relative;
  z-index: 2;
}

.hall-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
  z-index: 10;
}

.hall-content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hall-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hall-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.hall-floor {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.hall-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hall-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.hall-order {
  font-size: 24rpx;
  color: #999;
}

.hall-arrow {
  font-size: 28rpx;
  color: #ccc;
  font-weight: bold;
}

