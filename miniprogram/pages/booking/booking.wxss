/**booking.wxss - 预约页面样式**/

.booking-page {
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.scroll-content {
  flex: 1;
  width: 100%;
  height: 100%;
  padding-bottom: var(--spacing-xl);
  box-sizing: border-box;
  overflow-y: auto;
}

/* 预约流程 */
.booking-steps {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
}

.steps-title {
  margin-bottom: var(--spacing-lg);
  text-align: center;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.step-item {
  display: flex;
  align-items: center;
  position: relative;
}

.step-icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-right: var(--spacing-md);
}

.step-icon {
  width: 100%;
  height: 100%;
}

.step-number {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: var(--accent-color);
  color: var(--white);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  border: 4rpx solid var(--white);
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.step-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.step-arrow {
  font-size: 32rpx;
  color: var(--text-light);
  margin: 0 var(--spacing-md);
}

/* 今日预约情况 */
.today-booking {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
  text-align: center;
}

.today-title {
  margin-bottom: var(--spacing-lg);
}

.today-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: var(--spacing-lg);
  padding: var(--spacing-lg) 0;
}

.today-stats .stat-item {
  flex: 1;
}

.today-stats .stat-value {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
}

.today-stats .stat-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.today-stats .stat-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: var(--border-color);
}

.full-tip {
  color: var(--text-secondary);
  font-size: 28rpx;
  padding: var(--spacing-md);
}

/* 我的预约 */
.my-bookings {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
}

.bookings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.bookings-title {
  flex: 1;
}

.bookings-more {
  font-size: 26rpx;
  color: var(--text-light);
}

.bookings-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.booking-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  background-color: var(--secondary-color);
  border-radius: var(--radius-md);
}

.booking-date {
  width: 100rpx;
  text-align: center;
  margin-right: var(--spacing-md);
}

.booking-day {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  line-height: 1;
}

.booking-month {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: var(--spacing-xs);
}

.booking-info {
  flex: 1;
}

.booking-time {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.booking-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.booking-status {
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 24rpx;
}

.status-approved {
  background-color: var(--success-color);
  color: var(--white);
}

.status-pending {
  background-color: var(--warning-color);
  color: var(--white);
}

.status-rejected {
  background-color: var(--error-color);
  color: var(--white);
}

/* 温馨提示 */
.tips {
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
}

.tips-title {
  margin-bottom: var(--spacing-md);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.tip-item {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

