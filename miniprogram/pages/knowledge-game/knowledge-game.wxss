.knowledge-game-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.scroll-content {
  width: 100%;
}

.scroll-wrapper {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 进度条区域 */
.progress-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.progress-percent {
  font-size: 24rpx;
  color: #409EFF;
  font-weight: 600;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #e4e7ed;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #409EFF 0%, #67C23A 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 题目卡片 */
.question-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e4e7ed;
}

.question-number {
  font-size: 28rpx;
  color: #409EFF;
  font-weight: 600;
}

.question-hall {
  font-size: 24rpx;
  color: #909399;
  background: #f0f2f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.question-content {
  margin-top: 20rpx;
}

.question-text {
  font-size: 32rpx;
  color: #303133;
  line-height: 1.6;
  font-weight: 500;
}

/* 选项区域 */
.options-section {
  margin-bottom: 30rpx;
}

.option-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #e4e7ed;
  transition: all 0.3s ease;
  position: relative;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  border-color: #409EFF;
  background: #ecf5ff;
}

.option-label {
  font-size: 32rpx;
  color: #409EFF;
  font-weight: 600;
  margin-right: 20rpx;
  min-width: 40rpx;
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: #303133;
  line-height: 1.5;
}

.option-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #409EFF;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-prev {
  background: #f0f2f5;
  color: #606266;
}

.btn-prev:not([disabled]):active {
  background: #e4e7ed;
}

.btn-prev[disabled] {
  opacity: 0.5;
}

.btn-next {
  background: linear-gradient(135deg, #409EFF 0%, #67C23A 100%);
  color: #fff;
}

.btn-next:not([disabled]):active {
  opacity: 0.8;
}

.btn-next.disabled,
.btn-next[disabled] {
  background: #c0c4cc;
  opacity: 0.6;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #909399;
}

/* 底部安全区域 */
.scroll-bottom-safe {
  height: 40rpx;
}

