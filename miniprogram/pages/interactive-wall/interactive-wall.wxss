.interactive-wall-page {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.scroll-container {
  flex: 1;
  height: 100vh;
}

/* 反馈列表 */
.feedback-list {
  padding: var(--spacing-md) 0;
}

/* 反馈卡片 */
.feedback-card {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-lg);
  background-color: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s;
}

.feedback-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

/* 反馈头部 */
.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.feedback-user-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.feedback-user {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.feedback-type {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: var(--secondary-color);
  color: var(--primary-color);
  border-radius: var(--radius-sm);
  font-size: 22rpx;
}

.feedback-time {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 评分 */
.feedback-rating {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.rating-stars .star {
  font-size: 28rpx;
  color: var(--warning-color);
  line-height: 1;
}

.rating-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* AR评分 */
.feedback-ar-rating {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.ar-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 反馈内容 */
.feedback-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
  word-break: break-all;
}

/* 反馈图片 */
.feedback-images {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.feedback-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius-md);
  background-color: var(--border-color);
}

/* 反馈底部 */
.feedback-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: var(--spacing-sm);
  border-top: 1rpx solid var(--border-color);
}

.feedback-date {
  font-size: 22rpx;
  color: var(--text-light);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) var(--spacing-lg);
  min-height: 400rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg);
  gap: var(--spacing-sm);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: var(--spacing-lg);
  font-size: 24rpx;
  color: var(--text-light);
}

/* 底部安全区域 */
.scroll-bottom-safe {
  height: env(safe-area-inset-bottom);
  min-height: 20rpx;
}

/* 浮动按钮 */
.fab-container {
  position: fixed;
  right: var(--spacing-lg);
  bottom: calc(50px + env(safe-area-inset-bottom) + var(--spacing-lg));
  z-index: 100;
}

.fab-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, #2C5282 100%);
  border-radius: 50%;
  box-shadow: var(--shadow-lg);
  transition: all 0.3s;
}

.fab-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-md);
}

.fab-icon {
  font-size: 48rpx;
  color: var(--white);
  line-height: 1;
  margin-bottom: 4rpx;
}

.fab-text {
  font-size: 22rpx;
  color: var(--white);
  font-weight: 500;
}

