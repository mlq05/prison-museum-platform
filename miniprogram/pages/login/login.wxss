.login-page {
  min-height: 100vh;
  background-color: #F5F1E6;
}

.container {
  padding: 40rpx;
}

.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 标签页切换 */
.tabs {
  display: flex;
  margin-bottom: 60rpx;
  border-bottom: 2rpx solid #E5E5E5;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #999999;
  position: relative;
}

.tab-item.active {
  color: #1A365D;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: #1A365D;
  border-radius: 2rpx;
}

/* 表单样式 */
.form-container {
  margin-top: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background: #F8F8F8;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  box-sizing: border-box;
}

/* Skyline 不支持 :focus 伪类，移除或使用 class */
.input-focus {
  border-color: #1A365D;
  background: #FFFFFF;
}

.input.error {
  border-color: #FF4444;
}

.error-msg {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #FF4444;
}

.success-msg {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #4CAF50;
}

.primary-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1A365D;
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  border: none;
}

.primary-btn::after {
  border: none;
}

/* Skyline 不支持属性选择器，改用 class */
.primary-btn.disabled {
  background: #CCCCCC;
  color: #FFFFFF;
}

/* 微信登录 */
.wechat-login {
  margin-top: 60rpx;
}

.divider {
  text-align: center;
  margin: 40rpx 0;
  color: #999999;
  font-size: 26rpx;
  position: relative;
}

.divider::before,
.divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1rpx;
  background: #E5E5E5;
}

.divider::before {
  left: 0;
}

.divider::after {
  right: 0;
}

.wechat-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07C160;
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.wechat-btn::after {
  border: none;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 选择器样式 */
.picker-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background: #F8F8F8;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #333333;
}

