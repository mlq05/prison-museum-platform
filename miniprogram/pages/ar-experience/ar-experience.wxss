/**ar-experience.wxss - AR体验页面样式**/

.ar-experience-page {
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scroll-content {
  flex: 1;
  height: 100%;
  overflow-y: auto;
}

/* AR视图容器 */
.ar-view-container {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* AR加载遮罩 */
.ar-loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(26, 54, 93, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  text-align: center;
  color: var(--white);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: var(--white);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.loading-url {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  word-break: break-all;
  padding: 0 40rpx;
  max-width: 600rpx;
}

/* AR错误遮罩 */
.ar-error-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(26, 54, 93, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--spacing-lg);
}

.error-content {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  max-width: 600rpx;
  width: 100%;
}

.error-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--error-color);
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.error-message {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.8;
  margin-bottom: var(--spacing-md);
  white-space: pre-line;
}

.error-url {
  font-size: 24rpx;
  color: var(--text-secondary);
  word-break: break-all;
  margin-bottom: var(--spacing-lg);
  padding: var(--spacing-md);
  background-color: var(--secondary-color);
  border-radius: var(--radius-md);
}

.error-content .btn {
  width: 100%;
  margin-bottom: var(--spacing-md);
}

.error-content .btn:last-child {
  margin-bottom: 0;
}

/* AR展区列表 */
.ar-halls-list {
  padding: var(--spacing-md);
}

.ar-hall-card {
  margin-bottom: var(--spacing-md);
  overflow: hidden;
  position: relative;
  background: #fff;
  border-radius: var(--radius-lg);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.ar-hall-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.hall-cover-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.hall-cover {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.hall-info {
  padding: var(--spacing-md);
}

.hall-name {
  margin-bottom: var(--spacing-xs);
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.hall-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ar-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: var(--white);
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
  z-index: 10;
}

