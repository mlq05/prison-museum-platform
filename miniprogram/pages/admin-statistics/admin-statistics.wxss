.admin-statistics-page {
  min-height: 100vh;
  height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.admin-statistics-scroll {
  flex: 1;
  box-sizing: border-box;
  padding: 24rpx 24rpx 120rpx;
  width: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 24rpx;
}

/* 日期范围选择 */
.date-range {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.date-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.date-label {
  font-size: 24rpx;
  color: #6b7280;
}

.date-picker {
  padding: 16rpx 20rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111827;
  text-align: center;
}

.date-separator {
  font-size: 28rpx;
  color: #6b7280;
  margin-top: 32rpx;
}

/* 加载状态 */
.loading-container {
  text-align: center;
  padding: 80rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
}

.stat-value.stat-success {
  color: #22c55e;
}

.stat-value.stat-warning {
  color: #f59e0b;
}

.stat-value.stat-primary {
  color: #3b82f6;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 取消率 */
.cancellation-rate {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rate-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #f59e0b;
  text-align: center;
}

.rate-bar {
  height: 12rpx;
  background-color: #f3f4f6;
  border-radius: 6rpx;
  overflow: hidden;
}

.rate-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #f59e0b 0%, #fbbf24 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 角色分布 */
.role-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.role-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
}

.role-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.role-icon {
  font-size: 32rpx;
}

.role-name {
  font-size: 28rpx;
  color: #111827;
}

.role-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #3b82f6;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}
