/* ar-native.wxss - 基于小程序原生组件的AR体验页面样式 */

.ar-native-page {
  width: 100%;
  height: 100vh;
  background-color: #000;
  position: relative;
  overflow: hidden;
}

/* 摄像头容器 */
.camera-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.camera-view {
  width: 100%;
  height: 100%;
}

/* 扫描框 */
.scan-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 280rpx;
  height: 280rpx;
  z-index: 10;
}

.scan-box {
  width: 100%;
  height: 100%;
  position: relative;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
}

.scan-corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #409EFF;
}

.scan-corner-tl {
  top: -2rpx;
  left: -2rpx;
  border-right: none;
  border-bottom: none;
  border-top-left-radius: 20rpx;
}

.scan-corner-tr {
  top: -2rpx;
  right: -2rpx;
  border-left: none;
  border-bottom: none;
  border-top-right-radius: 20rpx;
}

.scan-corner-bl {
  bottom: -2rpx;
  left: -2rpx;
  border-right: none;
  border-top: none;
  border-bottom-left-radius: 20rpx;
}

.scan-corner-br {
  bottom: -2rpx;
  right: -2rpx;
  border-left: none;
  border-top: none;
  border-bottom-right-radius: 20rpx;
}

.scan-line {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(to right, transparent, #409EFF, transparent);
  animation: scanLine 2s linear infinite;
}

@keyframes scanLine {
  0% {
    top: 0;
  }
  100% {
    top: 100%;
  }
}

.scan-tip {
  margin-top: 40rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
}

/* 顶部提示 */
.top-hint {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx 20rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), transparent);
  z-index: 20;
}

.hint-text {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

/* AR叠加内容 */
.ar-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 15;
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.ar-model-preview {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  min-width: 500rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.model-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.model-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A365D;
  margin-bottom: 16rpx;
}

.model-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.detect-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background-color: #67C23A;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.badge-icon {
  font-size: 28rpx;
}

/* 底部控制栏 */
.control-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  z-index: 20;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

.control-btn.primary {
  background-color: #409EFF;
}

.control-btn.danger {
  background-color: rgba(245, 108, 108, 0.8);
}

.control-btn text {
  font-size: 36rpx;
}

/* AR结果页面 */
.ar-result-page {
  width: 100%;
  height: 100vh;
  background-color: #F5F1E6;
  display: flex;
  flex-direction: column;
}

.result-scroll {
  flex: 1;
  overflow-y: auto;
}

/* 3D模型展示区域 */
.model-display-area {
  width: 100%;
  height: 500rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.model-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.model-image {
  width: 100%;
  height: 100%;
}

.model-placeholder-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  color: rgba(255, 255, 255, 0.8);
}

.model-placeholder-text text:first-child {
  font-size: 80rpx;
}

.model-placeholder-text .sub-text {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 展区信息卡片 */
.hall-info-card {
  background-color: #fff;
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.hall-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1A365D;
  margin-bottom: 16rpx;
}

.hall-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 40rpx;
}

/* 知识点列表 */
.knowledge-points {
  margin-bottom: 40rpx;
}

.points-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A365D;
  margin-bottom: 24rpx;
}

.point-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #F8F9FA;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.point-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.point-content {
  flex: 1;
}

.point-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1A365D;
  margin-bottom: 8rpx;
}

.point-desc {
  font-size: 24rpx;
  color: #999;
}

.point-arrow {
  font-size: 40rpx;
  color: #CCC;
}

/* 语音导览 */
.audio-guide {
  margin-bottom: 40rpx;
}

.audio-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A365D;
  margin-bottom: 24rpx;
}

.audio-player {
  background-color: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #409EFF;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.play-btn.playing {
  background-color: #67C23A;
}

.audio-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.audio-name {
  font-size: 28rpx;
  color: #1A365D;
  font-weight: bold;
}

.audio-duration {
  font-size: 24rpx;
  color: #999;
}

.audio-progress {
  width: 100%;
}

/* 打卡区域 */
.checkin-section {
  text-align: center;
}

.checkin-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.checkin-btn.checked {
  background: #E4E7ED;
  color: #909399;
}

.checkin-tip {
  font-size: 24rpx;
  color: #999;
}

/* 结果页底部 */
.result-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #E4E7ED;
}

.back-btn,
.close-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.back-btn {
  background-color: #F8F9FA;
  color: #1A365D;
  border: 1rpx solid #E4E7ED;
}

.close-btn {
  background-color: #1A365D;
  color: #fff;
}

